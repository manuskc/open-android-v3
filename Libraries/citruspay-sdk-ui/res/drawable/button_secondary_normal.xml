<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom 2dp Shadow -->
    <item>
        <inset android:drawable="@drawable/shadowlayout"></inset>
    </item>

    <!-- White Top color -->
    <item android:bottom="3dp"
        android:top="1dp"
        android:left="2dp"
        android:right="2dp"
        >

        <shape  android:shape="rectangle">

            <solid android:color="@color/citrus_white" />
            <corners android:radius="2dp" />


        </shape>

    </item>


</layer-list>