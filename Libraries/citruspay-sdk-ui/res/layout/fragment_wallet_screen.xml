<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fillViewport="true"
    tools:context="com.citrus.sdk.ui.fragments.WalletScreenFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/citrus_white"
        android:clickable="true"
        android:orientation="vertical">

        <include android:id="@+id/wallet_header"
                 layout="@layout/layout_wallet_header"/>

        <TextView
            android:id="@+id/add_money_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_list_item"
            android:drawableLeft="@drawable/ic_add_money"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:text="@string/text_add_money"
            android:textColor="@color/citrus_text_color"
            android:textSize="16sp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:background="@color/citrus_separator_color"/>

        <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="@drawable/selector_list_item"-->
        <!--android:drawableLeft="@drawable/hdfc_bank"-->
        <!--android:drawablePadding="16dp"-->
        <!--android:padding="16dp"-->
        <!--android:text="@string/text_transaction_history"-->
        <!--android:textColor="@color/citrus_text_color"-->
        <!--android:textSize="16sp"-->
        <!--/>-->
        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:layout_marginLeft="16dp"-->
        <!--android:background="@color/citrus_separator_color"/>-->

        <TextView
            android:id="@+id/withdraw_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_list_item"
            android:drawableLeft="@drawable/ic_withdraw_money"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:text="@string/text_withdraw_money"
            android:textColor="@color/citrus_text_color"
            android:textSize="16sp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:background="@color/citrus_separator_color"/>

        <TextView
            android:id="@+id/manage_cards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_list_item"
            android:drawableLeft="@drawable/ic_manage_cards"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:text="@string/text_manage_saved_cards"
            android:textColor="@color/citrus_text_color"
            android:textSize="16sp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:background="@color/citrus_separator_color"/>

        <include
            layout="@layout/layout_citrus_trust_powered"/>
    </LinearLayout>
</ScrollView>

