<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:background="@drawable/selector_citrus_card"
              android:orientation="vertical"
              android:paddingTop="6dp"
              android:paddingLeft="6dp"
              android:paddingRight="6dp"
              android:paddingBottom="9dp"
              android:visibility="gone">


    <TextView
        android:id="@+id/text_pay_with_card_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="10dp"
        android:background="@drawable/selector_list_item"
        android:text="@string/text_credit_debit_promotion"
        android:textAllCaps="true"
        android:textColor="?attr/colorPrimary"
        android:textSize="14sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/citrus_separator_color"/>


    <TextView
        android:id="@+id/other_banks_text_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/selector_list_item"
        android:text="@string/text_pay_with_net_banking"
        android:padding="10dp"
        android:textAllCaps="true"
        android:textColor="?attr/colorPrimary"
        android:textSize="14sp"/>

</LinearLayout>