        <Button
            android:id="@+id/make_payment_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp56"
            android:layout_marginTop="@dimen/dp20"
            android:paddingBottom="@dimen/dp10"
            android:paddingLeft="@dimen/dp16"
            android:paddingRight="@dimen/dp16"
            android:layout_marginRight="@dimen/dp16"
            android:paddingTop="11dp"
            android:text="@string/text_make_payment"
            android:textAllCaps="true"
            android:layout_below="@id/owner_name_til"
            android:textColor="@color/citrus_white"
            android:textSize="14sp"/>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:gravity="bottom|center_horizontal"
                      android:orientation="vertical"
                      android:paddingLeft="-16dp"
                      android:layout_below="@id/make_payment_button">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp16"
                android:src="@drawable/img_powered_by"/>
