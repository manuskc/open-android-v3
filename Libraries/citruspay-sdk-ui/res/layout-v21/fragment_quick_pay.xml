<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/citrus_app_background_color"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp8"
        android:paddingLeft="@dimen/dp8"
        android:paddingRight="@dimen/dp8"
        android:paddingTop="@dimen/dp8"
        tools:context="com.citrus.sdk.ui.fragments.QuickPayFragment">

        <RelativeLayout
            android:id="@+id/wallet_details_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/citrus_card_background"
            android:visibility="gone"
            android:paddingBottom="@dimen/dp16"
            android:paddingLeft="@dimen/dp16"
            android:paddingRight="@dimen/dp16"
            android:paddingTop="@dimen/dp16">

            <TextView
                android:id="@+id/label_my_cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_my_wallet"
                android:textAllCaps="true"
                android:textColor="@color/citrus_label_color"
                android:textSize="14sp"
                />
            <ImageView
                android:id="@+id/wallet_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_my_cash"
                android:layout_marginTop="@dimen/dp20"
                android:src="@drawable/ic_wallet_small"/>
            <TextView
                android:id="@+id/setup_wallet_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_my_cash"
                android:layout_marginLeft="@dimen/dp16"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/wallet_image"
                android:text="@string/text_wallet_promotion"
                android:textColor="@color/citrus_text_color"
                android:textSize="14sp"/>
            <RelativeLayout
                android:id="@+id/wallet_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_my_cash"
                android:layout_marginLeft="@dimen/dp16"
                android:layout_marginTop="17dp"
                android:layout_toRightOf="@id/wallet_image"
                android:text="@string/text_wallet_promotion"
                android:visibility="gone">
                <TextView
                    android:id="@+id/balance_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_your_balance"
                    android:textColor="@color/citrus_text_color_light"/>
                <TextView
                    android:id="@+id/wallet_balance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/balance_lable"
                    android:text="1000.00"
                    android:textColor="@color/citrus_amount_color"
                    android:textSize="19sp"/>

            </RelativeLayout>

            <Button
                android:id="@+id/setup_wallet_button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp56"
                android:layout_below="@id/wallet_image"
                android:layout_marginTop="@dimen/dp20"
                android:paddingBottom="@dimen/dp10"
                android:paddingLeft="@dimen/dp20"
                android:paddingRight="@dimen/dp20"
                android:paddingTop="11dp"
                android:textSize="12sp"
                android:text="@string/text_setup_your_wallet"
                android:textAllCaps="true"
                android:textColor="@color/citrus_white"/>
            <Button
                android:id="@+id/pay_now"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp56"
                android:layout_below="@id/wallet_image"
                android:layout_marginTop="@dimen/dp20"
                android:paddingBottom="@dimen/dp10"
                android:paddingLeft="@dimen/dp20"
                android:paddingRight="@dimen/dp20"
                android:paddingTop="11dp"
                android:visibility="gone"
                android:layout_marginRight="16dp"
                android:text="@string/text_pay_now"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:textColor="@color/citrus_white"/>
            <Button
                android:id="@+id/add_money_pay"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@id/pay_now"
                android:layout_height="wrap_content"
                android:layout_below="@id/wallet_image"
                android:layout_marginTop="@dimen/dp24"
                android:background="@drawable/selector_button_secondary"
                android:paddingBottom="@dimen/dp10"
                android:paddingLeft="@dimen/dp20"
                android:paddingRight="@dimen/dp20"
                android:paddingTop="11dp"
                android:visibility="gone"
                android:textSize="12sp"
                android:text="@string/text_add_money_pay"
                android:textAllCaps="true"
                android:textColor="@color/citrus_text_color"/>

        </RelativeLayout>

        <include android:id="@+id/payment_mode_container"
                 layout="@layout/layout_saved_cards"/>
        <include android:id="@+id/pay_with_card"
                 layout="@layout/layout_pay_with_card"/>
        <include android:id="@+id/pay_with_bank"
                 layout="@layout/layout_pay_with_bank"/>
        <include android:id="@+id/pay_with_new"
                 layout="@layout/layout_pay_new"/>
        <include
            android:id="@+id/branding_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility ="gone"
            android:layout_below="@id/pay_with_new"
            layout="@layout/layout_citrus_trust_powered"/>

    </LinearLayout>
</ScrollView>

